.zuce {
  width: 750rpx;
  height: 100vh;
  background-color: #f8b865;
}
.zuce .title {
  width: 690rpx;
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  color: white;
  font-weight: bold;
  margin-left: 30rpx;
  font-size: 48rpx;
}
.zuce .container {
  margin: 20rpx 30rpx 0 30rpx;
  width: 690rpx;
  height: 620rpx;
  border-radius: 30rpx;
  background-color: #ffffff;
  box-shadow: 2px 1.5px 2px #ccc, -1px -1px 1px #ccc;
  padding: 50rpx;
}
.zuce .container .top {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding-top: 42rpx;
  width: 690rpx;
  height: 360rpx;
}
.zuce .container .top .input {
  display: flex;
  align-items: center;
  background-color: white;
  border-bottom: 1px solid #f0f0f0;
  height: 90rpx;
  width: 650rpx;
}
.zuce .container .top .input input {
  margin-left: 20rpx;
}
.zuce .container .singin {
  text-align: right;
  margin: 20rpx 20rpx 30rpx 0;
  font-size: 36rpx;
  color: #adadad;
}
.zuce .container .btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  width: 600rpx;
  height: 90rpx;
  background-color: #41B577;
  border-radius: 50rpx;
  margin: 0 auto;
  box-shadow: 0px 1.5px 1.5px #41B577;
}
