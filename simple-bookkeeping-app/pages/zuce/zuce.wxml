<view class="zuce">
  <view class="title">简易记账本</view>
  <view class="container">
    <view class="top">
      <view class="input">
        <van-icon
          slot="left-icon"
          size="21px"
          name="contact"
          class="icon"
        />
        <!-- <van-cell-group> -->
        <input bindinput="getUser" placeholder="请输入用户名" />
        <!-- </van-cell-group> -->
      </view>
      <!-- 密码 -->
      <view class="input">
        <van-icon
          slot="left-icon"
          size="21px"
          name="bag-o"
          class="icon"
        />
        <!-- <van-cell-group> -->
        <input
          type="password"
          bindinput="getPaw"
          placeholder="请输入密码"
        />
        <!-- </van-cell-group> -->
      </view>
      <!-- 重复密码 -->
      <view class="input">
        <van-icon
          slot="left-icon"
          size="21px"
          name="goods-collect-o"
          class="icon"
        />
        <!-- <van-cell-group> -->
        <input
          type="password"
          bindinput="getPaws"
          placeholder="重复密码"
        />
        <!-- </van-cell-group> -->
      </view>
    </view>
    <view class="singin" bind:tap="goLogin">快速登录</view>
    <view class="btn" bind:tap="zuce">注 册</view>
  </view>
</view>

