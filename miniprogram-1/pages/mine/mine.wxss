image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.weidenglu {
  display: flex;
  justify-content: left;
  align-items: center;
  margin-top: 60rpx;
}

.root {
  display: flex;
  justify-content: left;
  align-items: center;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

.button {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  border-radius:10px;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.nickName {
  color: #464545;
  font-size: 50rpx;
  font-weight: bold;
}

.user {
  font-size: 20px;
  align-items: center;
}

.user .van-icon {
  margin-right: 10rpx;
}

.text {
  font-size: 40rpx;
  margin: 20rpx;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
} 

.input {
  border: 1px solid gainsboro;
  margin: 20rpx;
}
