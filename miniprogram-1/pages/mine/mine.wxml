<!-- 账号密码登录 -->
<view class="weidenglu">
  <image wx:if="{{noLogin}}" src="/images/07.png" />
  <text wx:if="{{noLogin}}" class="nickName">未登录</text>
</view>
<!-- vant组件输入用户名和密码 -->
<view wx:if="{{noLogin}}" class="container">
  <van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="用户名"
    placeholder="请输入用户名"
    bind:change="getAccount"
  />
  <van-field
    value="{{ password }}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
    bind:change="getPassword"
  />
</van-cell-group>
</view>

<!-- 登录按钮 -->
<button wx:if="{{noLogin}}" class="button" type="primary" bindtap="login">登录</button>

<text class="nickName">{{account}}</text>

<!-- 设置和意见反馈 -->
<view class="user">
  <van-cell
  wx:if="{{!noLogin}}"
  is-link
  title="设置"
  icon="setting-o"
  size="large"
  border="{{ true }}"
  link-type="navigateTo"
  url="/pages/settings/settings"
/>
<van-cell
  wx:if="{{!noLogin}}"
  is-link
  title="意见反馈"
  icon="comment-o"
  size="large"
  border="{{ true }}"
  link-type="navigateTo"
  url="/pages/feedback/feedback"
/>
</view>
  


 

